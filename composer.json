{
    "name": "shiblati/framework",
    "description": "Shiblati's core framework",
    "type": "library",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "pimple/pimple": "^3.5",
        "twig/twig": "^v3.1.0",
        "klein/klein": "^v2.1.2",
        "monolog/monolog": "^2.3.5",
        "guzzlehttp/guzzle": "^7.4.1",
        "robmorgan/phinx": "^0.12.10",
        "shiblati/database": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "symfony/var-dumper": "^v6.0.3",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Shiblati\\": "src/"
        },
        "files": [
            "src/Framework/Helpers/functions.php"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:chrisrowles/shiblati-database.git"
        }
    ],
    "authors": [
        {
            "name": "Chris Rowles",
            "email": "me@rowles.ch"
        }
    ]
}
